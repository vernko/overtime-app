<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: "Overtime App Alert", sticy: false, image: :notice, time: 2000) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Overtime App Error", sticy: false, image: :notice, time: 2000) %>
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticy: false, image: :notice, time: 2000) %>
<% end %>